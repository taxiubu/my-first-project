<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InforContact">

    <ImageView
        android:id="@+id/imIcon"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tvShowName"
        android:textSize="20dp"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_below="@+id/tvShowName"
        android:id="@+id/tvShowPhone"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_below="@+id/tvShowPhone"
        android:id="@+id/tvShowGroup"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btBack"
        android:layout_alignParentBottom="true"
        android:text="Back"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btCall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvShowGroup"
        android:background="@drawable/call" />
    <Button
        android:layout_below="@+id/btCall"
        android:id="@+id/btMess"
        android:background="@drawable/mess"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btEdit"
        android:text="Sá»­a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>